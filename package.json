{
  "name": "flashpeg-arbitrage",
  "version": "1.0.0",
  "description": "Flash loan arbitrage bot for stETH/ETH and DAI peg arbitrage",
  "main": "keeper/src/index.ts",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:fork": "forge test --fork-url $MAINNET_RPC_URL",
